<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hr.sil.android.retailadmin.activity.SplashActivity"
    android:background="?attr/thmSplashBackground">


    <ImageView
        android:id="@+id/ivFlexilockerRetail"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="?attr/thmSplashLogo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ivSplashLogo"
        app:layout_constraintHeight_percent="0.27"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <ImageView
        android:id="@+id/ivSplashLogo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/splash_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivFlexilockerRetail"
        app:layout_constraintBottom_toTopOf="@+id/ivRPLUserApp"
        app:layout_constraintHeight_percent="0.49"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <ImageView
        android:id="@+id/ivRPLUserApp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/rpl_admin_app"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivSplashLogo"
        app:layout_constraintBottom_toTopOf="@+id/tvVersion"
        app:layout_constraintHeight_percent="0.08"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>


    <hr.sil.android.smartlockers.adminapp.fonts.view.fonts.TextViewWithFont
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:text=""
        android:textSize="?attr/thmDescriptionTextSize"
        android:textColor="?attr/thmDescriptionTextColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivRPLUserApp"
        app:layout_constraintBottom_toTopOf="@+id/progressBarSplash"
        app:layout_constraintHeight_percent="0.08"
        app:font_name="?attr/thmMainFontName"
        app:font_type="?attr/thmMainFontTypeRegular"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>


    <ProgressBar
        android:id="@+id/progressBarSplash"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:indeterminateDrawable="?attr/thmSplashProgressBar"
        app:layout_constraintTop_toBottomOf="@+id/tvVersion"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.08"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />



</androidx.constraintlayout.widget.ConstraintLayout>