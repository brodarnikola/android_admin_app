            <LinearLayout
                android:id="@+id/llLatitudeLongitude"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/transparentColor"
                android:orientation="vertical"
                android:paddingRight="15dp"
                app:layout_constraintEnd_toStartOf="@+id/llMap"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintHorizontal_weight="7.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAddressCountryError">

                <hr.sil.android.smartlockers.adminapp.fonts.view.fonts.TextViewWithFont
                    android:id="@+id/tvLatitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:alpha="0.6"
                    android:gravity="left"
                    android:text="@string/device_latitude"
                    android:textColor="?attr/thmDescriptionTextColor"

                    android:textAllCaps="true"
                    android:textSize="?attr/thmDescriptionTextSize"
                    android:letterSpacing="?attr/thmEdittextInputLetterSpacing"

                    app:font_name="?attr/thmMainFontName"
