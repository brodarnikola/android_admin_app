                        android:id="@+id/ePaperHighResolution"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"

                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text="@string/e_paper_high_resolution"
                        android:textColor="?attr/thmDescriptionTextColor"
                        android:textSize="?attr/thmRadioButtonAndCheckBoxTextSize"
                        app:font_name="?attr/thmMainFontName"
                        app:font_type="?attr/thmMainFontTypeRegular" />
                </RadioGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clSystemReboot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

