                    android:layout_marginTop="5dp"
                    android:alpha="0.6"
                    android:gravity="left"

                    android:textAllCaps="true"
                    android:textSize="?attr/thmDescriptionTextSize"
                    android:letterSpacing="?attr/thmEdittextInputLetterSpacing"

                    android:text="@string/device_longitude"
