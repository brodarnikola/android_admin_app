                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:textAllCaps="true"
                android:textSize="?attr/thmDescriptionTextSize"
                android:text="@string/linux_locker_settings"
                android:textColor="?attr/thmDescriptionTextColor"
                app:font_name="?attr/thmMainFontName"
