                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"

                        android:maxLines="2"
                        android:ellipsize="end"

                        android:text="@string/e_paper_none"
                        android:textColor="?attr/thmDescriptionTextColor"
                        android:textSize="?attr/thmRadioButtonAndCheckBoxTextSize"
