<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTopLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivSearchOptions"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

        <hr.sil.android.smartlockers.adminapp.fonts.EdittextWithFont
            android:id="@+id/filterEdittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="?attr/thmLoggedInAvailableBottomLineEditTextColor"
            android:inputType="text"
            android:letterSpacing="?attr/thmEdittextTextLetterSpacing"
            android:maxLines="1"
            android:paddingLeft="?attr/thmEdittextLeftPadding"
            android:paddingRight="40dp"

            android:hint="@string/generic_search"

            android:textColor="?attr/thmRegisterEdittextColor"
            android:textColorHint="?attr/thmHomeScreenEdittextFilterHintColor"
            android:textSize="?attr/thmEdittextTextSize"

            app:font_name="?attr/thmMainFontName"
            app:font_type="?attr/thmMainFontTypeRegular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/ivRemoveFilterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="?attr/thmEdittextMarginRight"
            android:paddingBottom="?attr/thmHomeScreenEdittextPaddingBottomImage"

            android:src="?attr/thmHomeScreenEdittextSearchImage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/ivSearchOptions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:paddingEnd="20dp"
        android:src="?attr/thmSlaveLinuxSearchOptionImage"
        app:layout_constraintBottom_toBottomOf="@+id/clTopLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/clTopLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2" />

<!--    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout-->
<!--        android:id="@+id/swipeRefreshLockerData"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        android:layout_marginTop="5dp"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/clSearchOptions"-->
<!--        app:layout_constraintLeft_toLeftOf="parent"-->
<!--        app:layout_constraintBottom_toBottomOf="parent">-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/peripheralsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/clSearchOptions"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="5dp"
            android:paddingBottom="5dp"/>

<!--    app:layout_constraintTop_toBottomOf="@+id/clTopLayout"-->
<!--    app:layout_constraintLeft_toLeftOf="parent"-->
<!--    app:layout_constraintBottom_toBottomOf="parent"-->

<!--    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSearchOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@+id/clTopLayout"
        app:layout_constraintBottom_toTopOf="@+id/peripheralsRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSearchOptions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintWidth_max="wrap"
            app:layout_constraintWidth_percent="0.85"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/ivClearSearch"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:src="?attr/thmHomeScreenEdittextDeleteTextImage"
            app:layout_constraintWidth_percent="0.15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rvSearchOptions"  />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/llSearchOptions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/clTopLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:background="?attr/thmSlaveLockerBackgroundColorLinux">

        <hr.sil.android.smartlockers.adminapp.fonts.view.fonts.TextViewWithFont
            android:id="@+id/sizeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            android:gravity="left"
            android:textSize="?attr/thmDescriptionTextSize"
            android:textAllCaps="true"
            android:text="@string/locker_slave_size"
            android:textColor="?attr/thmDescriptionTextColor"
            app:font_name="?attr/thmMainFontName"
            app:font_type="?attr/thmMainFontTypeRegular" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp">

            <hr.sil.android.smartlockers.adminapp.fonts.CheckBoxWithFont
                android:id="@+id/xsCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="?attr/thmRadioButtonAndCheckBoxTextSize"
                android:text="XS"
                android:textAllCaps="true"
                android:textColor="?attr/thmDescriptionTextColor"
                android:theme="@style/CheckBoxTheme"
                app:font_name="?attr/thmMainFontName"
                app:font_type="?attr/thmMainFontTypeRegular"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/sCheckBox"/>

            <hr.sil.android.smartlockers.adminapp.fonts.CheckBoxWithFont
                android:id="@+id/sCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="?attr/thmRadioButtonAndCheckBoxTextSize"
                android:text="S"
                android:textAllCaps="true"
                android:textColor="?attr/thmDescriptionTextColor"
                android:theme="@style/CheckBoxTheme"
                app:font_name="?attr/thmMainFontName"
                app:font_type="?attr/thmMainFontTypeRegular"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/xsCheckBox"
                app:layout_constraintEnd_toStartOf="@+id/mCheckBox"  />

            <hr.sil.android.smartlockers.adminapp.fonts.CheckBoxWithFont
                android:id="@+id/mCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="?attr/thmRadioButtonAndCheckBoxTextSize"
                android:text="M"
                android:textAllCaps="true"
                android:textColor="?attr/thmDescriptionTextColor"
                android:theme="@style/CheckBoxTheme"
                app:font_name="?attr/thmMainFontName"
                app:font_type="?attr/thmMainFontTypeRegular"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/sCheckBox"
                app:layout_constraintEnd_toStartOf="@+id/lCheckBox"  />

            <hr.sil.android.smartlockers.adminapp.fonts.CheckBoxWithFont
                android:id="@+id/lCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="?attr/thmRadioButtonAndCheckBoxTextSize"
                android:text="L"
                android:textAllCaps="true"
                android:textColor="?attr/thmDescriptionTextColor"
                android:theme="@style/CheckBoxTheme"
                app:font_name="?attr/thmMainFontName"
                app:font_type="?attr/thmMainFontTypeRegular"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/mCheckBox"
                app:layout_constraintEnd_toStartOf="@+id/xlCheckBox"  />

            <hr.sil.android.smartlockers.adminapp.fonts.CheckBoxWithFont
                android:id="@+id/xlCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="?attr/thmRadioButtonAndCheckBoxTextSize"
                android:text="XL"
                android:textAllCaps="true"
                android:textColor="?attr/thmDescriptionTextColor"
                android:theme="@style/CheckBoxTheme"
                app:font_name="?attr/thmMainFontName"
                app:font_type="?attr/thmMainFontTypeRegular"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lCheckBox"
                app:layout_constraintEnd_toEndOf="parent"   />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <hr.sil.android.smartlockers.adminapp.fonts.view.fonts.TextViewWithFont
            android:id="@+id/stateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            android:gravity="left"
            android:textSize="?attr/thmDescriptionTextSize"
            android:textAllCaps="true"
            android:text="@string/state_generic"
            android:textColor="?attr/thmDescriptionTextColor"
            app:font_name="?attr/thmMainFontName"
            app:font_type="?attr/thmMainFontTypeRegular" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp">

            <hr.sil.android.smartlockers.adminapp.fonts.CheckBoxWithFont
                android:id="@+id/emptyCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="?attr/thmRadioButtonAndCheckBoxTextSize"
                android:textAllCaps="true"
                android:text="@string/locker_empty"
                android:textColor="?attr/thmDescriptionTextColor"
                android:theme="@style/CheckBoxTheme"
                app:font_name="?attr/thmMainFontName"
                app:font_type="?attr/thmMainFontTypeRegular"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/occupiedCheckBox"/>

            <hr.sil.android.smartlockers.adminapp.fonts.CheckBoxWithFont
                android:id="@+id/occupiedCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:textSize="?attr/thmRadioButtonAndCheckBoxTextSize"
                android:textAllCaps="true"
                android:text="@string/locker_occupied"
                android:textColor="?attr/thmDescriptionTextColor"
                android:theme="@style/CheckBoxTheme"
                app:font_name="?attr/thmMainFontName"
                app:font_type="?attr/thmMainFontTypeRegular"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/emptyCheckBox"   />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <hr.sil.android.smartlockers.adminapp.fonts.view.fonts.TextViewWithFont
            android:id="@+id/otherSearchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            android:gravity="left"
            android:textSize="?attr/thmDescriptionTextSize"
            android:textAllCaps="true"
            android:text="@string/other_generic"
            android:textColor="?attr/thmDescriptionTextColor"
            app:font_name="?attr/thmMainFontName"
            app:font_type="?attr/thmMainFontTypeRegular" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp">

            <hr.sil.android.smartlockers.adminapp.fonts.CheckBoxWithFont
                android:id="@+id/needsCleaningCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="?attr/thmRadioButtonAndCheckBoxTextSize"
                android:textAllCaps="true"
                android:text="@string/lockers_needs_cleaning"
                android:textColor="?attr/thmDescriptionTextColor"
                android:theme="@style/CheckBoxTheme"
                app:font_name="?attr/thmMainFontName"
                app:font_type="?attr/thmMainFontTypeRegular"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <hr.sil.android.smartlockers.adminapp.fonts.CheckBoxWithFont
                android:id="@+id/reducedMobilityCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="?attr/thmRadioButtonAndCheckBoxTextSize"
                android:textAllCaps="true"
                android:text="@string/reduced_mobility_friendly"
                android:textColor="?attr/thmDescriptionTextColor"
                android:theme="@style/CheckBoxTheme"
                app:font_name="?attr/thmMainFontName"
                app:font_type="?attr/thmMainFontTypeRegular"
                app:layout_constraintTop_toBottomOf="@+id/needsCleaningCheckBox"
                app:layout_constraintStart_toStartOf="parent"   />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <hr.sil.android.smartlockers.adminapp.fonts.ButtonWithFont
            android:id="@+id/btnSaveChanges"
            android:layout_width="wrap_content"
            android:paddingHorizontal="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content"
            android:background="?attr/thmMainButtonBackgroundColor"
            android:letterSpacing="?attr/thmButtonLetterSpacing"
            android:text="@string/app_generic_ok"
            android:textColor="?attr/thmLoginButtonTextColor"
            android:textSize="?attr/thmButtonTextSize"
            app:font_name="?attr/thmMainFontName"
            app:font_type="?attr/thmMainFontTypeMedium"
            android:gravity="center"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/ivBlurImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ContentDescription" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
