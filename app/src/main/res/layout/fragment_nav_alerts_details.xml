<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="hr.sil.android.smartlockers.adminapp.view.fragment.main.NavAlertsDetailsFragment">

    <!-- If we don't want that user can go next page in webView, then just replace "height = matchParent"
   with "height = wrapContent" -->
    <WebView
        android:id="@+id/ttcScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"  />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"  />


</FrameLayout>
